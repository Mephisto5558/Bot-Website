{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}